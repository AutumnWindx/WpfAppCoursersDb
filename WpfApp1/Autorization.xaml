<Window x:Class="WpfApp1.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Autorization" Height="350" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF71F373" Offset="0"/>
                <GradientStop Color="White" Offset="0.692"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Margin="50">
            <TextBlock Text="Логин"/>
            <TextBox Name="LoginTBox"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Name="PasswordPBox"/>
            <Button Margin="9"
                Content="Вход"
                Name="LogInBtn"
                Click="LogInBtn_Click"/>
            <Button Margin="10"
                Content="Регистрация"
                Name="RegBtn"
                Click="RegBtn_Click"/>
        </StackPanel>

    </Grid>
</Window>
